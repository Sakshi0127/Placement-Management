<%- include ('../partials/header.html'); -%>
<title>Add Students</title>
<link rel="stylesheet" href="../../css/tpo.css">
</head>
<body>
    <%- include ('partials/navbar.html'); -%>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <hr class="hl1">
                <div class="page-header bg-light">
                    <h1 class="text-center">Add Students</h1>
                </div>
                <hr class="hl1"><br/>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 bg-light border rounded border-dark p-4">
                <form class="form-horizontal" role="form" method="post" action="/tpo/addstudent" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="control-label">Add Excel File Here</label>
                        <input class="form-control" type="file" name="uploadfile" accept=".xls, .xlsx" required/>
                    </div>
                    
                    <!-- Dynamic Status Message -->
                    <% if (locals.message) { %>
                        <div class="alert alert-<%= status %>"><%= message %></div>
                    <% } %>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-outline-info">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include ('../partials/footer.html'); -%>

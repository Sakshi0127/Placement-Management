<%- include ('../partials/header.html'); -%>
<title>Student Login</title>
<link rel="stylesheet" href="/css/student.css">
</head>
<body style="background-image: url('https://thapar.edu/upload/images/hostelm.jpg'); 
              background-size: cover; 
              background-position: center; 
              background-repeat: no-repeat; 
              height: 100vh; 
              margin: 0;"> <!-- Inline styles for background image -->
    <br><br><br><br><br>
    <div class="container">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 max-auto form-group bg-light border rounded border-primary">
                <form action="/student/login" method="POST" data-toggle="validator">
                    <h2 class="text-center">Student Login</h2>
                    <hr class="hl1"><br/>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="user_email" id="inputEmail" class="form-control" placeholder="xyz@gmail.com" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="_pass">Password</label>
                        <input type="password" name="user_pass" id="inputPassword" class="form-control" placeholder="Password" required>
                        <div class="help-block with-errors"></div>
                    </div>

                    <!-- Safely render login errors if they exist -->
                    <% if (typeof login_errors !== 'undefined' && login_errors.length > 0) { 
                        login_errors.forEach(function(error_msg){ %>
                        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                    <% });
                    } %>

                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-primary">Login</button>
                    </div>
                    <hr>
                    <div class="form-group">
                        <span> Don't have an account? </span><a href="/student/signup">Sign Up here</a>
                    </div>
                </form>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
<%- include ('../partials/footer.html'); -%>

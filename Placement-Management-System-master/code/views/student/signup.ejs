<%- include ('../partials/header.html'); -%>
<title>Student SignUp</title>
<link rel="stylesheet" href="../../css/student.css">
</head>
<body style="background-image: url('https://thapar.edu/upload/images/hostelm.jpg'); 
              background-size: cover; 
              background-position: center; 
              background-repeat: no-repeat; 
              height: 100vh; 
              margin: 0;"> <!-- Inline styles for background image -->
    <br><br><br>
    <div class="container">
        <% if (locals.message) { %>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <div class="alert alert-success" role="alert">Your account has been created successfully, Now you can <a href="/student/login">Login</a></div>
                </div>
                <div class="col-3"></div>
            </div>
        <% } %>
        <br><br>   
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 form-group bg-light border rounded border-primary">
                <form action="/student/signup" method="POST" data-toggle="validator">
                    <h2 class="text-center">Student SignUp</h2>
                    <hr class="hl1"><br/>
                    <div class="form-group">
                        <label>Student Name</label>
                        <input type="text" name="user_name" data-error="You must have a student name." id="inputName" class="form-control" placeholder="Student Name" value="<%= (locals.old_data) ? old_data.user_name : ''; %>" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="_remail">Email</label>
                        <input type="email" name="user_email" id="inputEmail" class="form-control" placeholder="xyz@gmail.com" value="<%= (locals.old_data) ? old_data.user_email : ''; %>" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="_rpass">Password</label>
                        <input type="password" name="user_pass" data-minlength="6" id="inputPassword" data-error="Have at least 6 characters" class="form-control" placeholder="Password" required>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="_rcollagename">College Name</label>
                        <input type="text" name="collagename" data-error="You must have a College name." id="inputName" class="form-control" placeholder="College Name" required>
                        <div class="help-block with-errors"></div>
                    </div>

                    <% if (locals.register_error) { 
                        register_error.forEach(function(error_msg){ %>
                        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                    <% });
                    } %>
                    <button type="submit" class="btn btn-outline-primary">Sign Up</button>
                    <br/>
                    <br/>
                </form>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
<%- include ('../partials/footer.html'); -%>
